@{
}

<h2> Datos del Empleado</h2>
@if (ViewBag.empleado != null)
{
    <p>Apellido:@ViewBag.empleado.Apellido</p>
    <p>Nombre: @ViewBag.empleado.Nombre</p>
    <p>Fecha de Nacimiento: @ViewBag.empleado.FechaNacimiento.ToString("d")</p>
    <p>Edad: @ViewBag.empleado.Edad</p>
    <p>Telefono: @ViewBag.empleado.Telefono</p>
    <p>Domicilio: @ViewBag.empleado.Domicilio</p>
    <p>Rol en la Empresa: @ViewBag.empleado.Rol</p>
    <p>Fecha de Ingreso: @ViewBag.empleado.FechaIngreso.ToString("d")</p>
    <p>Antiguedad: @ViewBag.empleado.Antiguedad</p>
    <p>Salario: $@ViewBag.empleado.Salario</p>
} 
else 
{ 
    <p>@ViewBag.mensaje</p>        
}

